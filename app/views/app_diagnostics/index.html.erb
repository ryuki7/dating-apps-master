<div id="index-banner" class="parallax-container layout-app-diagnostics">
  <div class="section no-pad-bot">
    <div class="container" id="app_diagnostics_index">
      <h3 class="header center" id="app-diagnostics-title"><span>適正アプリ診断</span></h3>
      <p class="app-diagnostics-text">4つのアプリ(Pairs・with・tapple・Tinder)の内、どのアプリが向いているのか診断しましょう！</p>
      <div class="app_diagnostics_index_apps">
        <% @apps.each do |app| %>
          <% if app.diagnostic_allocation == 'c' %>
            <img src="<%= "/app_icon_images/#{app.icon_image}" %>" class="app-image-tapple">
          <% else %>
            <img src="<%= "/app_icon_images/#{app.icon_image}" %>">
          <% end %>
        <% end %>
      </div>
        <%= link_to '診断する', app_diagnostic_path(1), id: "app-diagnostics-button", class: "btn-large waves-effect waves-light" %>
    </div>
  </div>
</div>