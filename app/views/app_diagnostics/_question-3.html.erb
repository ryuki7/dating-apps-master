<div class="container">
    <h5 id="app-diagnostics-page">3/3</h5>
    <p class="app-diagnostics-text" id="app-diagnostics-text"><%= @question_description_split_array[0] %><br><%= @question_description_split_array[1] %><br><%= @question_description_split_array[2] %><br><%= @question_description_split_array[3] %></p>
    <div class="row center">
      <form action="original_create" method="post" name="app_diagnostics_form_3">
        <div class="app-diagnostics-answer-box-3">
          <!-- CSRFトークンを渡す -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
          <!-- question1の選択されたパラメータを渡す -->
          <% if params[:allocation_1_1] %>
            <input name="allocation_1_1" id="question_1_answer_1_2" type="hidden" value="<%= params[:allocation_1_1] %>">
          <% end %>
          <% if params[:allocation_1_2] %>
            <input name="allocation_1_2" id="question_1_answer_2_2" type="hidden" value="<%= params[:allocation_1_2] %>">
          <% end %>
          <!-- question2の選択されたパラメータを渡す -->
          <% if params[:allocation_2_1] %>
            <input name="allocation_2_1" id="question_2_answer_1" type="hidden" value="<%= params[:allocation_2_1] %>">
          <% end %>
          <% if params[:allocation_2_2] %>
            <input name="allocation_2_2" id="question_2_answer_2" type="hidden" value="<%= params[:allocation_2_2] %>">
          <% end %>
          <% if params[:allocation_2_3] %>
            <input name="allocation_2_3" id="question_2_answer_3" type="hidden" value="<%= params[:allocation_2_3] %>">
          <% end %>
          <% if params[:allocation_2_4] %>
            <input name="allocation_2_4" id="question_2_answer_4" type="hidden" value="<%= params[:allocation_2_4] %>">
          <% end %>
          <!-- question3 -->
          <button type="button" id="app-diagnostics-description-select-button-3-1" class="btn waves-effect waves-light buttonwhite app-diagnostics-answer-btn description-long"><%= @answers[0].description %></button>
          <input name="allocation_3_1" type="hidden" value="<%= @answers[0].allocation %>" id="allocation-3-1">
          <button type="button" id="app-diagnostics-description-select-button-3-2" class="btn waves-effect waves-light buttonwhite app-diagnostics-answer-btn description-long"><%= @answers[1].description %></button>
          <input name="allocation_3_2" type="hidden" value="<%= @answers[1].allocation %>" id="allocation-3-2">
          <button type="button" id="app-diagnostics-description-select-button-3-3" class="btn waves-effect waves-light buttonwhite app-diagnostics-answer-btn description-long"><%= @answers[2].description %></button>
          <input name="allocation_3_3" type="hidden" value="<%= @answers[2].allocation %>" id="allocation-3-3">
          <button type="button" id="app-diagnostics-description-select-button-3-4" class="btn waves-effect waves-light buttonwhite app-diagnostics-answer-btn description-long"><%= @answers[3].description %></button>
          <input name="allocation_3_4" type="hidden" value="<%= @answers[3].allocation %>" id="allocation-3-4">
          <button type="button" id="app-diagnostics-description-select-button-3-5" class="btn waves-effect waves-light buttonwhite app-diagnostics-answer-btn description-long"><%= @answers[4].description %></button>
          <input name="allocation_3_5" type="hidden" value="<%= @answers[4].allocation %>" id="allocation-3-5">
        </div>
        <br>
        <!-- question3のsubmitボタン -->
        <button name="app_diagnostics_submit_3" type="button" id="app-diagnostics-select-submit-button">選択</button>   
      </form>
    </div>
</div>