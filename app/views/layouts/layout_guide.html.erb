<!DOCTYPE html>
<html>
  <head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-211757403-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-211757403-1');
    </script>
    <%= display_meta_tags(default_meta_tags) %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% if params[:action] == 'guide' %>
      <% unless request.referer == "https://dating-apps-master.com/guide" %>
        <meta http-equiv="refresh" content=" 0.5; url=/guide">
      <% end %>
    <% elsif params[:action] == 'richmenu_guide' %>
      <% unless request.referer == "https://dating-apps-master.com/richmenu_guide" %>
        <meta http-equiv="refresh" content=" 0.5; url=/richmenu_guide">
      <% end %>
    <% end %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <title>マッチングアプリマスター</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if params[:action] == 'guide' %>
      <%= render 'layouts/guide_header' %>
    <% elsif params[:action] == 'richmenu_guide' %>
      <nav class="white" role="navigation">
        <div class="nav-wrapper container">
          <a id="logo-container" class="brand-logo"><img src="/logos/マッチングアプリマスター.jpg"></a>
        </div>
      </nav>
    <% end %>
    <div id="liffAppContent">
      <%= yield %>
    </div>
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>
    <%= javascript_pack_tag 'top', 'data-turbolinks-track': 'reload' %>
    <script charset="utf-8" src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</html>
